<resources>

  <style name="blason">
    <item name="android:layout_width">220dp</item>
    <item name="android:layout_height">220dp</item>
  </style>

  <style name="TextCommons">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">19sp</item>
  </style>

  <style name="TrollInfo" parent="TextCommons">
    <item name="android:textColor">@color/fg</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:textSize">19sp</item>
  </style>

  <style name="Status" parent="TextCommons">
    <item name="android:textColor">@color/status</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:layout_marginTop">3dp</item>
    <item name="android:paddingLeft">1dp</item>
    <item name="android:paddingRight">1dp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="caractCar" parent="caract">
    <item name="android:width">78dp</item>
  </style>

  <style name="caractBm" parent="caract">
    <item name="android:width">52dp</item>
  </style>

  <style name="caractAvg" parent="caract">
    <item name="android:width">93dp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="caractM" parent="caract">
    <item name="android:width">78dp</item>
  </style>

</resources>
