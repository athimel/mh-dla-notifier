<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  style="@style/Main">

      <include layout="@layout/card_header" android:layout_width="fill_parent"/>

      <!-- HR -->
      <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    style="@style/hr"/>

      <!-- DLA -->
      <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/DL">

        <TextView android:text="@string/dla"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/DT"/>
        <TextView android:id="@+id/dla_field"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_weight="1"
                  style="@style/DD"/>

      </LinearLayout>

      <!-- PA restants -->
      <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/DL">

        <TextView android:text="@string/remaining_pas"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/DT"/>
        <TextView android:id="@+id/pas"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_weight="1"
                  style="@style/DD"/>

      </LinearLayout>

      <!-- DurÃ©e tour -->
      <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/DL">

        <TextView android:text="@string/dla_duration"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/DT"/>
        <TextView android:id="@+id/dla_duration_field"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_weight="1"
                  style="@style/DD"/>

      </LinearLayout>

      <!-- DLA suivante -->
      <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/DL">

        <TextView android:text="@string/next_dla"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/DT"/>
        <TextView android:id="@+id/next_dla_field"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_weight="1"
                  style="@style/DD"/>

      </LinearLayout>

      <!-- Position -->
      <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/DL">

        <TextView android:text="@string/position"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/DT"/>
        <TextView android:id="@+id/position"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_weight="1"
                  style="@style/DD"/>

      </LinearLayout>

      <!-- Points de vie -->
      <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/DL">

        <TextView android:text="@string/pvs"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/DT"/>

        <TextView android:id="@+id/pvs"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_weight="1"
                  style="@style/DD"/>

      </LinearLayout>


      <!-- Fatigue -->
      <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/DL">

        <TextView android:text="@string/fatigue"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/DT"/>

        <TextView android:id="@+id/fatigue"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_weight="1"
                  style="@style/DD"/>

      </LinearLayout>

      <!-- Kill / death -->
      <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/DL">

        <TextView android:text="@string/kd"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/DT"/>
        <TextView android:id="@+id/kd"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_weight="1"
                  style="@style/DD"/>

      </LinearLayout>

      <include layout="@layout/details"/>

    </LinearLayout>
  </ScrollView>

</LinearLayout>