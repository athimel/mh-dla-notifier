<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="40dp"
              android:orientation="horizontal"
              android:gravity="left"
              style="@style/ActionBar"
        >

  <!-- Name -->
  <ImageView android:id="@+id/selectedTrollBlason"
             android:orientation="vertical"
             android:layout_height="40dp"
             android:layout_width="40dp"
             android:scaleType="fitXY"
             android:src="@drawable/trarnoll_256"
          />

  <TextView android:id="@+id/selectedTrollName"
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            style="@style/Link"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Jouer votre TrÃµll"
            android:gravity="left"/>


  <ImageView android:id="@+id/toggleDetailedButton"
               android:layout_height="40dp"
               android:layout_width="40dp"
               android:scaleType="fitXY"
               android:src="@drawable/action_more_details"
          />
  <ImageView android:id="@+id/refreshButton"
               android:layout_height="40dp"
               android:layout_width="40dp"
               android:scaleType="fitXY"
               android:src="@drawable/action_refresh"
          />
  <ImageView android:id="@+id/menuButton"
               android:layout_height="40dp"
               android:layout_width="40dp"
               android:scaleType="fitXY"
               android:src="@drawable/action_menu"
          />

</LinearLayout>
